<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_save_success.xml - Success celebration dialog -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Success mascot -->
    <ImageView
        android:id="@+id/imgSuccessMascot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_success_mascot"
        android:contentDescription="Success!" />

    <!-- Success message -->
    <TextView
        android:id="@+id/tvSuccessTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Woohoo! ðŸŽ‰"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_bold" />

    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your PDF has been saved!"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="@font/nunito_regular" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            style="@style/DialogButton.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="ðŸ“¤ Share" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            style="@style/DialogButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:text="Done" />

    </LinearLayout>

</LinearLayout>
