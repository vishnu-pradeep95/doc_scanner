<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_pdf_editor.xml - PDF Editor Layout -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Modern Top Toolbar with Mascot -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white"
        app:titleTextColor="@android:color/white">

        <!-- Custom Title with Mascot -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_edit_mascot"
                android:contentDescription="Edit mascot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit PDF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Action Buttons Row -->
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/primary_dark"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_undo_mascot"
            android:contentDescription="Undo"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp" />

        <ImageButton
            android:id="@+id/btnRedo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_redo_mascot"
            android:contentDescription="Redo"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:background="#44FFFFFF"
            android:layout_marginHorizontal="8dp" />

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_zoom_in"
            android:contentDescription="Zoom in"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_zoom_out"
            android:contentDescription="Zoom out"
            android:padding="8dp"
            android:layout_marginHorizontal="4dp"
            app:tint="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸ’¾ Save"
            android:textSize="13sp"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <!-- PDF View Container -->
    <FrameLayout
        android:id="@+id/pdfContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/actionBar"
        app:layout_constraintBottom_toTopOf="@id/toolbarBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- PDF Viewer - Native Android PdfRenderer -->
        <com.pdfscanner.app.editor.NativePdfView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Annotation Canvas Overlay -->
        <com.pdfscanner.app.editor.AnnotationCanvasView
            android:id="@+id/annotationCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Selection Action Bar (appears when annotation selected) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectionToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnResizeSmaller"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_zoom_out"
                android:contentDescription="Make smaller"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnResizeLarger"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_zoom_in"
                android:contentDescription="Make larger"
                android:padding="8dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/divider"
                android:layout_marginHorizontal="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteSelected"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete_tool_mascot"
                android:contentDescription="Delete"
                android:padding="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Page Navigation -->
    <LinearLayout
        android:id="@+id/pageNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@drawable/bg_rounded_dark"
        app:layout_constraintBottom_toTopOf="@id/toolbarBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnPreviousPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_page_prev_mascot"
            android:contentDescription="Previous page"
            android:scaleType="fitCenter"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvPageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <ImageButton
            android:id="@+id/btnNextPage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_page_next_mascot"
            android:contentDescription="Next page"
            android:scaleType="fitCenter"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Bottom Toolbar with Tools -->
    <HorizontalScrollView
        android:id="@+id/toolbarBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Select Tool -->
            <LinearLayout
                android:id="@+id/toolSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconSelect"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_select_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Signature Tool -->
            <LinearLayout
                android:id="@+id/toolSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconSignature"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_signature_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Text Tool -->
            <LinearLayout
                android:id="@+id/toolText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconText"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_text_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Highlight Tool -->
            <LinearLayout
                android:id="@+id/toolHighlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconHighlight"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_highlight_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Highlight"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Stamp Tool -->
            <LinearLayout
                android:id="@+id/toolStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconStamp"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_stamp_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stamp"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Draw Tool -->
            <LinearLayout
                android:id="@+id/toolDraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconDraw"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_draw_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Draw"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Shapes Tool -->
            <LinearLayout
                android:id="@+id/toolShapes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconShapes"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_shapes_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shapes"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Checkmark Tool -->
            <LinearLayout
                android:id="@+id/toolCheckmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconCheckmark"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_checkmark_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Eraser Tool -->
            <LinearLayout
                android:id="@+id/toolEraser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconEraser"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_eraser_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Erase"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/divider"
                android:layout_marginHorizontal="8dp" />

            <!-- Color Picker -->
            <LinearLayout
                android:id="@+id/toolColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_color_mascot" />

                    <View
                        android:id="@+id/colorPreview"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/bg_color_preview" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Font Size -->
            <LinearLayout
                android:id="@+id/toolFontSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconFontSize"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_font_size_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Stroke Width -->
            <LinearLayout
                android:id="@+id/toolStrokeWidth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/iconStrokeWidth"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_stroke_width_mascot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stroke"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
