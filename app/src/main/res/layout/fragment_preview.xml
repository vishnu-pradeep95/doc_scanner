<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.PreviewFragment">
    
    <!-- Decorative background elements -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_decorative_elements"
        android:scaleType="fitEnd"
        android:contentDescription="@null" />

    <!-- Toolbar - Playful Mascot Style -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_preview"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="?attr/colorOnSurface"
        app:title="âœ¨ Edit Magic"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleMedium"
        app:titleTextColor="?attr/colorOnSurface" />

    <!-- Artistic photo frame with shadow -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/previewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="3dp"
        app:strokeColor="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/filterLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        
        <!-- Inner padding frame -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:contentDescription="Scanned page preview"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/backgrounds/scenic" />
                
        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Playful filter selection with icons -->
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainerLow"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toTopOf="@id/buttonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="ðŸŽ¨ Style"
            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
            android:fontFamily="@font/nunito_bold"
            android:textColor="?attr/colorOnSurface" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">
            
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/filterToggleGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:checkedButton="@id/btnFilterOriginal"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilterOriginal"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95dp"
                    android:text="@string/filter_original"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_filter_original_mascot"
                    app:iconSize="22dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilterMagic"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95dp"
                    android:text="@string/filter_magic"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_filter_magic_mascot"
                    app:iconSize="22dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilterEnhanced"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95dp"
                    android:text="@string/filter_enhanced"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_filter_enhanced_mascot"
                    app:iconSize="22dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilterSharpen"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95dp"
                    android:text="@string/filter_sharpen"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_filter_sharpen_mascot"
                    app:iconSize="22dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilterBw"
                    style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95dp"
                    android:text="@string/filter_bw"
                    android:textSize="11sp"
                    app:icon="@drawable/ic_filter_bw_mascot"
                    app:iconSize="22dp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>
            
        </HorizontalScrollView>

    </LinearLayout>

    <!-- Playful action buttons - text only for clean layout -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetake"
            style="@style/ActionButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="Retake"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCrop"
            style="@style/ActionButton.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:text="Edit"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddPage"
            style="@style/ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Page"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Loading overlay for filter processing -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/loading_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/applying_filter"
                android:textColor="@color/gray_dark" />

        </LinearLayout>

    </FrameLayout>

    <!-- Old ProgressBar - keep for backward compatibility but use loadingOverlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
