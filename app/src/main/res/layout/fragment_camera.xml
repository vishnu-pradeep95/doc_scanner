<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.CameraFragment">

    <!-- Home button - top left -->
    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/go_home"
        android:src="@drawable/ic_home"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Document frame overlay hint -->
    <View
        android:id="@+id/frameOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:background="@drawable/document_frame"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintDimensionRatio="1:1.414"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Permission denied view - Cartoon themed -->
    <LinearLayout
        android:id="@+id/permissionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="@null"
            android:src="@drawable/illustration_camera"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/camera_permission_required"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrantPermission"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/grant_permission" />

    </LinearLayout>

    <!-- Batch mode indicator - shown when batch scanning is active -->
    <LinearLayout
        android:id="@+id/batchModeIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/badge_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_batch_mode"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textBatchCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Batch: 5" />

    </LinearLayout>

    <!-- Bottom controls -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/overlay"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Batch mode toggle -->
        <ImageButton
            android:id="@+id/btnBatchMode"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_camera_action_bg"
            android:contentDescription="@string/batch_mode"
            android:padding="10dp"
            android:src="@drawable/ic_batch_cute"
            app:tint="@color/white" />
        
        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Capture button - Playful mascot design with animation hint -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <!-- Sparkle background hint -->
            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/sparkle_ring"
                android:alpha="0.6" />
            
            <ImageButton
                android:id="@+id/btnCapture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_capture_button_mascot"
                android:scaleType="fitCenter"
                android:contentDescription="@string/capture_photo" />
                
        </FrameLayout>
        
        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Auto-scan button (ML Kit Document Scanner) - cute magic wand -->
        <ImageButton
            android:id="@+id/btnAutoScan"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/btn_camera_action_bg"
            android:contentDescription="@string/auto_scan"
            android:padding="10dp"
            android:src="@drawable/ic_auto_scan_cute"
            app:tint="@color/white" />

    </LinearLayout>
    
    <!-- View pages button - floating above controls when pages exist -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewPages"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/view_pages"
        android:visibility="gone"
        app:icon="@drawable/ic_pages"
        app:layout_constraintBottom_toTopOf="@id/controlsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
