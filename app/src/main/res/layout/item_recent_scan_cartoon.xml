<?xml version="1.0" encoding="utf-8"?>
<!--
    Cartoon Recent Scan Item Layout
    
    A card layout for displaying recent scan items in the cartoon style.
    Features rounded corners, playful colors, and clear typography.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/cartoon_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/cartoon_outline_variant"
    app:strokeWidth="1dp"
    app:rippleColor="@color/cartoon_primary_ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Thumbnail with rounded corners -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/cartoon_surface_variant"
                tools:src="@drawable/ic_cartoon_document" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Document Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <!-- Document Name -->
            <TextView
                android:id="@+id/txtDocumentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/cartoon_on_surface"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                tools:text="My Scanned Document" />

            <!-- Page Count & Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Page Badge -->
                <TextView
                    android:id="@+id/txtPageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cartoon_badge_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/cartoon_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/nunito_bold"
                    tools:text="3 pages" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="â€¢"
                    android:textColor="@color/cartoon_outline" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cartoon_on_surface_secondary"
                    android:textSize="13sp"
                    android:fontFamily="@font/nunito_regular"
                    tools:text="Today, 2:30 PM" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Share Button -->
            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share"
                android:src="@drawable/ic_cartoon_share"
                android:padding="8dp" />

            <!-- More Options -->
            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="More options"
                android:src="@drawable/ic_more_vert"
                android:padding="8dp"
                app:tint="@color/cartoon_on_surface_secondary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
