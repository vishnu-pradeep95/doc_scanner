<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 
    DARK MODE THEME
    
    This theme inherits from Material3 Dark and overrides specific colors
    for our app's dark mode with Studio Ghibli-inspired night palette.
    -->

    <!-- Main App Theme - Dark Mode -->
    <style name="Theme.PDFScanner" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>
        
        <!-- Secondary/Accent colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Background - Dark -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Status bar - Dark -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - Dark -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Modern Typography - Uses system's modern sans-serif -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.PDFScanner.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PDFScanner.Button.Outlined</item>
    </style>

    <!-- Custom Button Style - Dark Mode -->
    <style name="Widget.PDFScanner.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <style name="Widget.PDFScanner.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CARTOON THEME - DARK MODE                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <style name="Theme.PDFScanner.Cartoon" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors - Slightly muted for dark mode -->
        <item name="colorPrimary">@color/cartoon_primary</item>
        <item name="colorPrimaryDark">@color/cartoon_primary_dark</item>
        <item name="colorPrimaryContainer">@color/cartoon_primary_container_dark</item>
        <item name="colorOnPrimary">@color/cartoon_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/cartoon_on_primary_container</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/cartoon_secondary</item>
        <item name="colorSecondaryContainer">@color/cartoon_secondary_container_dark</item>
        <item name="colorOnSecondary">@color/cartoon_on_secondary</item>
        <item name="colorOnSecondaryContainer">@color/cartoon_on_secondary_container</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/cartoon_tertiary</item>
        <item name="colorTertiaryContainer">@color/cartoon_tertiary_container_dark</item>
        <item name="colorOnTertiary">@color/cartoon_on_tertiary</item>
        
        <!-- Accent -->
        <item name="colorAccent">@color/cartoon_accent</item>
        
        <!-- Surface Colors - Dark surfaces -->
        <item name="colorSurface">@color/cartoon_surface_dark</item>
        <item name="colorSurfaceVariant">@color/cartoon_surface_variant_dark</item>
        <item name="colorOnSurface">@color/cartoon_text_on_dark</item>
        <item name="colorOnSurfaceVariant">@color/cartoon_text_secondary_dark</item>
        
        <!-- Background - Dark -->
        <item name="android:colorBackground">@color/cartoon_background_dark</item>
        <item name="android:windowBackground">@color/cartoon_background_dark</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/cartoon_error</item>
        <item name="colorErrorContainer">@color/cartoon_error_container_dark</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/cartoon_outline_dark</item>
        <item name="colorOutlineVariant">@color/cartoon_outline_variant_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/cartoon_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/cartoon_background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Typography - Playful Nunito Font (bundled TTF) -->
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        
        <!-- Shape Appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Cartoon.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Cartoon.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Cartoon.LargeComponent</item>
        
        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.Cartoon.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Cartoon.Button.Outlined</item>
        
        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.Cartoon.CardView</item>
    </style>

</resources>
