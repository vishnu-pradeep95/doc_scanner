<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 
    DARK MODE THEME
    
    This theme inherits from Material3 Dark and overrides specific colors
    for our app's dark mode.
    -->

    <!-- Main App Theme - Dark Mode -->
    <style name="Theme.PDFScanner" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary</item>
        
        <!-- Secondary/Accent colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Background - Dark -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Status bar - Dark -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar - Dark -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.PDFScanner.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PDFScanner.Button.Outlined</item>
    </style>

    <!-- Custom Button Style - Dark Mode -->
    <style name="Widget.PDFScanner.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <style name="Widget.PDFScanner.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
