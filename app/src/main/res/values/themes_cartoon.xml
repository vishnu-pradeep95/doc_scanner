<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    ═══════════════════════════════════════════════════════════════════════════
    CARTOONISH THEME - Fun, Playful, Bold
    ═══════════════════════════════════════════════════════════════════════════
    
    This theme creates a cartoon-like appearance with:
    - Highly rounded corners (24dp buttons, 20dp cards)
    - Bold, saturated colors
    - Playful typography with Nunito/Comic Neue fonts
    - Soft shadows for depth
    - Fun micro-animations
    ═══════════════════════════════════════════════════════════════════════════
    -->

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- MAIN CARTOON THEME -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <style name="Theme.PDFScanner.Cartoon" parent="Theme.Material3.Light.NoActionBar">
        
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/cartoon_primary</item>
        <item name="colorPrimaryDark">@color/cartoon_primary_dark</item>
        <item name="colorPrimaryContainer">@color/cartoon_primary_container</item>
        <item name="colorOnPrimary">@color/cartoon_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/cartoon_on_primary_container</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/cartoon_secondary</item>
        <item name="colorSecondaryContainer">@color/cartoon_secondary_container</item>
        <item name="colorOnSecondary">@color/cartoon_on_secondary</item>
        <item name="colorOnSecondaryContainer">@color/cartoon_on_secondary_container</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/cartoon_tertiary</item>
        <item name="colorTertiaryContainer">@color/cartoon_tertiary_container</item>
        <item name="colorOnTertiary">@color/cartoon_on_tertiary</item>
        
        <!-- Accent (for compatibility) -->
        <item name="colorAccent">@color/cartoon_accent</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/cartoon_surface</item>
        <item name="colorSurfaceVariant">@color/cartoon_surface_variant</item>
        <item name="colorOnSurface">@color/cartoon_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/cartoon_text_secondary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/cartoon_background</item>
        <item name="android:windowBackground">@color/cartoon_background</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/cartoon_error</item>
        <item name="colorErrorContainer">@color/cartoon_error_light</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/cartoon_outline</item>
        <item name="colorOutlineVariant">@color/cartoon_outline_variant</item>
        
        <!-- Status Bar - Matches background for immersive feel -->
        <item name="android:statusBarColor">@color/cartoon_background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/cartoon_background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography - Playful Nunito Font (bundled TTF) -->
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        
        <!-- Custom Text Appearances -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Cartoon.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Cartoon.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Cartoon.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Cartoon.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Cartoon.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Cartoon.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Cartoon.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Cartoon.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Cartoon.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Cartoon.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Cartoon.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Cartoon.LabelSmall</item>
        
        <!-- Custom Shape Appearances - Extra Rounded -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Cartoon.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Cartoon.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Cartoon.LargeComponent</item>
        
        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.Cartoon.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Cartoon.Button.Outlined</item>
        
        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.Cartoon.CardView</item>
        
        <!-- Chip Style -->
        <item name="chipStyle">@style/Widget.Cartoon.Chip</item>
        
        <!-- FAB Style -->
        <item name="floatingActionButtonStyle">@style/Widget.Cartoon.FloatingActionButton</item>
        
        <!-- Motion & Transitions -->
        <item name="motionDurationShort1">100</item>
        <item name="motionDurationShort2">200</item>
        <item name="motionDurationMedium1">250</item>
        <item name="motionDurationMedium2">300</item>
        <item name="motionDurationLong1">400</item>
        <item name="motionDurationLong2">500</item>
        <item name="motionEasingEmphasizedInterpolator">@android:interpolator/fast_out_slow_in</item>
        
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- TYPOGRAPHY - Playful Nunito Font Family -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Headlines - Big, Bold, Fun -->
    <style name="TextAppearance.Cartoon.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.Cartoon.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Cartoon.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
    </style>
    
    <!-- Titles - Clear and readable -->
    <style name="TextAppearance.Cartoon.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
    </style>
    
    <style name="TextAppearance.Cartoon.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
    </style>
    
    <style name="TextAppearance.Cartoon.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
    </style>
    
    <!-- Body Text - Comfortable reading -->
    <style name="TextAppearance.Cartoon.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Cartoon.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cartoon_text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <style name="TextAppearance.Cartoon.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/cartoon_text_secondary</item>
    </style>
    
    <!-- Labels - Button text, chips -->
    <style name="TextAppearance.Cartoon.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.Cartoon.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextAppearance.Cartoon.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SHAPE APPEARANCES - Extra Rounded Corners -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="ShapeAppearance.Cartoon.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Cartoon.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <style name="ShapeAppearance.Cartoon.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    
    <!-- Fully rounded (pill shape) -->
    <style name="ShapeAppearance.Cartoon.Pill" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BASE WIDGET STYLE (Required for dot-notation inheritance)           -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <style name="Widget.Cartoon" parent="android:Widget" />

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BUTTON STYLES - Big, Bold, Bouncy-looking -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <!-- Primary Button - Main CTA -->
    <style name="Widget.Cartoon.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="backgroundTint">@color/cartoon_primary</item>
        <item name="android:textColor">@color/cartoon_text_on_colored</item>
        <item name="iconTint">@color/cartoon_text_on_colored</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@animator/cartoon_button_state_animator</item>
    </style>
    
    <!-- Secondary/Outlined Button -->
    <style name="Widget.Cartoon.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/cartoon_primary</item>
        <item name="android:textColor">@color/cartoon_primary</item>
        <item name="iconTint">@color/cartoon_primary</item>
        <item name="rippleColor">@color/cartoon_ripple_primary</item>
    </style>
    
    <!-- Text Button -->
    <style name="Widget.Cartoon.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/cartoon_primary</item>
        <item name="iconTint">@color/cartoon_primary</item>
        <item name="rippleColor">@color/cartoon_ripple_primary</item>
    </style>
    
    <!-- Accent Button (Yellow) -->
    <style name="Widget.Cartoon.Button.Accent" parent="Widget.Cartoon.Button">
        <item name="backgroundTint">@color/cartoon_accent</item>
        <item name="android:textColor">@color/cartoon_on_accent</item>
        <item name="iconTint">@color/cartoon_on_accent</item>
    </style>
    
    <!-- Secondary Color Button (Turquoise) -->
    <style name="Widget.Cartoon.Button.Secondary" parent="Widget.Cartoon.Button">
        <item name="backgroundTint">@color/cartoon_secondary</item>
        <item name="android:textColor">@color/cartoon_on_secondary</item>
        <item name="iconTint">@color/cartoon_on_secondary</item>
    </style>
    
    <!-- Icon-only Button -->
    <style name="Widget.Cartoon.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">@color/cartoon_ripple_primary</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CARD STYLES - Rounded, Soft Shadows -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/cartoon_card_background</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/cartoon_ripple_primary</item>
    </style>
    
    <!-- Elevated card (alias for default) -->
    <style name="Widget.Cartoon.Card.Elevated" parent="Widget.Cartoon.CardView" />
    
    <!-- Card with colorful border -->
    <style name="Widget.Cartoon.CardView.Bordered" parent="Widget.Cartoon.CardView">
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/cartoon_primary</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <!-- Outlined card style -->
    <style name="Widget.Cartoon.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/cartoon_outline</item>
        <item name="cardBackgroundColor">@color/cartoon_surface</item>
        <item name="rippleColor">@color/cartoon_ripple_primary</item>
    </style>
    
    <!-- Flat card (no shadow) -->
    <style name="Widget.Cartoon.CardView.Flat" parent="Widget.Cartoon.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/cartoon_divider</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CHIP STYLES - Pill-shaped tags -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipBackgroundColor">@color/cartoon_surface_variant</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipStrokeColor">@color/cartoon_divider</item>
        <item name="android:textColor">@color/cartoon_text_primary</item>
    </style>
    
    <style name="Widget.Cartoon.Chip.Colored" parent="Widget.Cartoon.Chip">
        <item name="chipBackgroundColor">@color/cartoon_primary_container</item>
        <item name="chipStrokeColor">@color/cartoon_primary</item>
        <item name="android:textColor">@color/cartoon_primary_dark</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- FLOATING ACTION BUTTON - Big and bouncy -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/cartoon_primary</item>
        <item name="tint">@color/cartoon_on_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cartoon.FAB</item>
        <item name="elevation">12dp</item>
        <item name="pressedTranslationZ">8dp</item>
        <item name="rippleColor">@color/cartoon_ripple_light</item>
    </style>
    
    <style name="ShapeAppearance.Cartoon.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    
    <!-- Extended FAB -->
    <style name="Widget.Cartoon.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/cartoon_primary</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cartoon.Pill</item>
        <item name="elevation">12dp</item>
    </style>
    
    <!-- Extended FAB alias -->
    <style name="Widget.Cartoon.FAB.Extended" parent="Widget.Cartoon.ExtendedFloatingActionButton" />

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- INPUT FIELDS - Rounded with fun focus states -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeColor">@color/cartoon_input_stroke_color</item>
        <item name="hintTextColor">@color/cartoon_text_secondary</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- TOOLBAR STYLE -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/cartoon_background</item>
        <item name="titleTextAppearance">@style/TextAppearance.Cartoon.TitleLarge</item>
        <item name="titleTextColor">@color/cartoon_text_primary</item>
        <item name="navigationIconTint">@color/cartoon_text_primary</item>
    </style>
    
    <style name="Widget.Cartoon.Toolbar.Colored" parent="Widget.Cartoon.Toolbar">
        <item name="android:background">@color/cartoon_primary</item>
        <item name="titleTextColor">@color/cartoon_text_on_colored</item>
        <item name="navigationIconTint">@color/cartoon_text_on_colored</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BOTTOM NAVIGATION -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/cartoon_surface</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Cartoon.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Cartoon.LabelMedium</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Cartoon.LabelSmall</item>
    </style>
    
    <style name="Widget.Cartoon.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/cartoon_primary_container</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Cartoon.Pill</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SPECIAL CAPTURE BUTTON STYLE -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.CaptureButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/cartoon_capture_button_bg</item>
        <item name="android:elevation">12dp</item>
        <item name="android:stateListAnimator">@animator/cartoon_capture_button_animator</item>
    </style>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- DIALOG STYLE -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    
    <style name="Widget.Cartoon.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Cartoon.LargeComponent</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Cartoon.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Cartoon.Button.Text</item>
    </style>

</resources>
