    <color name="primary">#6B9AC4</color>
    <color name="primary_dark">#4A7BA7</color>
    <color name="primary_light">#B8D4E8</color>
    <color name="primary_variant">#5889B3</color>
    
    <!-- Accent - Warm Sunset Orange/Coral -->
    <color name="accent">#E8A87C</color>
    <color name="accent_dark">#D4916A</color>
    <color name="secondary">#85B09A</color>
    <color name="secondary_light">#C5DED0</color>
    
