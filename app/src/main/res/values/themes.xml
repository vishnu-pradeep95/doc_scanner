<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main App Theme - Modern Material 3 Design with Inter-style typography -->
    <style name="Theme.PDFScanner" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark</item>
        
        <!-- Secondary/Accent colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Status bar - light status bar with surface color -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Modern Typography - Uses system's modern sans-serif -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        
        <!-- Text appearances with modern font -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.PDFScanner.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.PDFScanner.HeadlineMedium</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.PDFScanner.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.PDFScanner.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.PDFScanner.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.PDFScanner.BodyMedium</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.PDFScanner.LabelLarge</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.PDFScanner.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.PDFScanner.Button.Outlined</item>
    </style>
    
    <!-- Modern Text Appearances -->
    <style name="TextAppearance.PDFScanner.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.PDFScanner.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.PDFScanner.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <style name="Widget.PDFScanner.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Capture Button - Large circular camera button -->
    <style name="CaptureButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/capture_button_bg</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Action Button styles -->
    <style name="ActionButton" parent="Widget.PDFScanner.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="ActionButton.Secondary" parent="Widget.PDFScanner.Button.Outlined">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
    </style>
    
    <style name="ActionButton.Accent" parent="Widget.PDFScanner.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="iconTint">@color/white</item>
    </style>

    <!-- Theme for Crop Activity - MUST have ActionBar for toolbar to show -->
    <style name="Theme.PDFScanner.Crop" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="Widget.PDFScanner.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

</resources>
