<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PDFScanner" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="CaptureButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:background">@drawable/capture_button_bg</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ActionButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="ActionButton.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
    </style>

    <!-- Theme for Crop Activity - MUST have ActionBar for toolbar to show -->
    <style name="Theme.PDFScanner.Crop" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- This ensures the ActionBar/Toolbar is visible -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

</resources>
