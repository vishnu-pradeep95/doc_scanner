<?xml version="1.0" encoding="utf-8"?>
<!-- Cute capture button with camera icon -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow ring - pink tint -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#FFFFFF" />
            <solid android:color="#20FF6B9D" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    
    <!-- Inner filled circle -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    
    <!-- Cute camera icon -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp"
        android:drawable="@drawable/ic_camera_cute" />
</layer-list>
