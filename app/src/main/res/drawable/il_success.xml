    <path
        android:fillColor="@color/cartoon_success"
        android:pathData="M75,85m-30,0a30,30 0,1 1,60 0a30,30 0,1 1,-60 0" />
    
    <!-- Circle outline -->
    <path
        android:fillColor="@android:color/transparent"
        android:strokeColor="@color/cartoon_success_dark"
        android:strokeWidth="3"
        android:pathData="M75,85m-30,0a30,30 0,1 1,60 0a30,30 0,1 1,-60 0" />
    
    <!-- Checkmark -->
    <path
        android:fillColor="@android:color/transparent"
        android:strokeColor="@color/cartoon_surface"
        android:strokeWidth="6"
        android:strokeLineCap="round"
        android:strokeLineJoin="round"
        android:pathData="M60,85l10,10l20,-20" />
    
