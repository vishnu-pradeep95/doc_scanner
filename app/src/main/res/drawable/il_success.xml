        android:pathData="M130,60l2,4l4,2l-4,2l-2,4l-2,-4l-4,-2l4,-2z" />
    
    <path
        android:fillColor="@color/cartoon_secondary"
        android:pathData="M25,110l2,4l4,2l-4,2l-2,4l-2,-4l-4,-2l4,-2z" />
    
    <path
        android:fillColor="@color/cartoon_tertiary"
        android:pathData="M125,110l3,6l6,3l-6,3l-3,6l-3,-6l-6,-3l6,-3z" />
    
