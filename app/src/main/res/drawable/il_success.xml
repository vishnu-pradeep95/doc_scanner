    android:width="150dp"
    android:height="150dp"
    android:viewportWidth="150"
    android:viewportHeight="150">
    
    <!-- Shadow -->
    <path
        android:fillColor="#15000000"
        android:pathData="M75,140m-45,0a45,8 0,1 1,90 0a45,8 0,1 1,-90 0" />
    
    <!-- Document body -->
    <path
        android:fillColor="@color/cartoon_surface"
        android:pathData="M35,15h55l30,30v85c0,4.4 -3.6,8 -8,8H35c-4.4,0 -8,-3.6 -8,-8V23c0,-4.4 3.6,-8 8,-8z" />
    
