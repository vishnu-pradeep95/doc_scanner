    <path
        android:fillColor="@color/cartoon_secondary_light"
        android:pathData="M90,15v30h30L90,15z" />
    
    <!-- Corner outline -->
    <path
        android:fillColor="@android:color/transparent"
        android:strokeColor="@color/cartoon_outline"
        android:strokeWidth="2"
        android:pathData="M90,15v30h30" />
    
