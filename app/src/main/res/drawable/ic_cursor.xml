    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">
    
    <!-- Cursor arrow body - friendly teal -->
    <path
        android:fillColor="#4ECDC4"
        android:strokeColor="#2C3E50"
        android:strokeWidth="1.5"
        android:pathData="M4,2 L20,11 L13,11 L13,20 L4,2 Z" />
    
