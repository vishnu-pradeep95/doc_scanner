<?xml version="1.0" encoding="utf-8"?>
<!--
    Cartoon Header Background
    
    A fun, colorful gradient background for the header section.
    Uses the coral-to-pink gradient for a playful cartoon feel.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="@color/cartoon_gradient_start"
        android:centerColor="@color/cartoon_gradient_center"
        android:endColor="@color/cartoon_gradient_end" />
    
    <!-- Rounded bottom corners for a softer look -->
    <corners
        android:bottomLeftRadius="32dp"
        android:bottomRightRadius="32dp" />
    
</shape>
